#include <util/alphabet.hpp>
#include <util/bits.hpp>
#include <util/sa_check.hpp>
#include <util/saca.hpp>

#include "${SACA_HEADER}"
#include "../../bigtest/bigtest_driver.hpp"
#include <gtest/gtest.h>

constexpr auto concrete_bigtest = [](const std::string& filename) {
    run_bigtest<${SACA_TYPE}, size_t>(filename, true);
};

TEST(bigtest, ${safe_type}) {
    concrete_bigtest("wikipedia/articles_en.txt");
    concrete_bigtest("wikipedia/all_vital.txt");
    concrete_bigtest("wikipedia/vital_10000/biology_and_health_sciences.html");

#ifndef DEBUG
    concrete_bigtest("wikipedia/vital_10000/people.html");
#endif
}
